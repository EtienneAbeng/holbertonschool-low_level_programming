# Makefile for the school project

# Compiler
CC := gcc

# Source files
SRC := main.c school.c

# Object files
OBJ := $(SRC:.c=.o)

# Executable name
NAME := school

# Program to delete files
RM := /bin/rm -f

# Compiler flags
CFLAGS := -Wall -Werror -Wextra -pedantic

# Rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile source files into object files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Rules to clean files
clean:
	$(RM) $(OBJ)

oclean: clean

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re

