# Makefile for compiling "school" program

# Compiler and compiler flags
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

# Sources files and object files
SRC = main.c school.c
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Command to delete files
RM = rm -f

# Rules
all: $(NAME)

$(NAME): $(OBJ)
        $(CC) $(CFLAGS) -o $@ $^

# Clean, pour nettoyer les fichiers temporaires
clean:
        $(RM) *~ $(NAME)

# Rule to delete object files
oclean:
        $(RM) $(OBJ)

# Rule to clean completely (temporary files and executable)
fclean: clean oclean

# Rule to force recompilation of all files
re: fclean all

# Variables
# (No need to specify variables CC, SRC, OBJ, NAME, RM, CFLAGS again as they are already defined above)

